    "editor.hover.enabled": true,
    "explorer.autoReveal": true,
    "editor.hover.delay": 300,
    "editor.hover.sticky": false, // To make the hover window disappear when moused-over
    "terminal.hover.enabled": false,
    "editor.parameterHints": true,
    "search.exclude": { // no idea what true or false actually does here. Doesn't seem to make a difference
        "**/*.html": true,
        "**/*.s": true,
        "**/*.S": true,
        "build-debug": true,
        "**/cubemx": false,
        "build-image0": true,
        "build-bootloader": true,
        "gdb.txt": true,
        "stmdev/build": true,
        "stmdev/lib": true
    },
    "search.showLineNumbers": true,
    "search.sortOrder": "modified",
    "search.searchOnTypeDebouncePeriod": 100,
    "search.searchEditor.defaultNumberOfContextLines": 4,
    "search.mode": "reuseEditor",
    "files.exclude": {                   // To exclude from the Explorer pane
        "**/build-debug": true,
        "**/cubemx": false,
        "**/build-image?": true,
        "**/build-bootloader": true,
        "**/cubemx/Drivers":true,
        "**/cubemx/Middlewares":true,
        "**/cubemx/startup_stm32*":true,
        "**/cubemx/*.ioc":true,
        "**/cubemx/Makefile":true,
        "**/cubemx/.mxproject":true,
    },
    "git.autofetch": true,
    "workbench.list.openMode": "doubleClick",
    "codestream.disableStrictSSL": true,
    "window.restoreWindows": "preserve",
    "window.reopenFolders": "all",
    "window.restoreFullscreen": true,
    "gitlab.instanceUrl": "https://git.hw.bits/",
    // "cortex-debug.JLinkGDBServerPath": "/opt/stm32/JLink/JLinkGDBServerCLExe",
    "workbench.tree.indent": 16,
    "debug.toolBarLocation": "docked",
    "editor.insertSpaces": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "merge-conflict.diffViewPosition": "Below",
    "workbench.editor.openPositioning": "last",
    "update.mode": "manual",
    "todo-tree.general.statusBar": "total",
    "todo-tree.tree.showCountsInTree": true,
    "cmake.configureOnOpen": false,
    "python.analysis.autoImportCompletions": false,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "python.linting.pylintArgs": [
        "--max-line-length=200"
    ],
    "editor.renderWhitespace": "all",
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true // Disable line too long warning
    },
    "editor.dragAndDrop": false, // turn on or off drag and drop copying
    "workbench.editor.revealIfOpen": true,
    "security.workspace.trust.untrustedFiles": "open",
    "C_Cpp.errorSquiggles": "enabled",
    "files.autoSave": "afterDelay",
    "gitlens.codeLens.enabled": false, // to prevent opening same file twice
}
