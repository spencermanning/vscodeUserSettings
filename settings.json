{
    "workbench.editor.titleScrollbarSizing": "large",
    "git.confirmSync": false,
    "editor.minimap.maxColumn": 40,
    "editor.minimap.scale": 2,
    "editor.minimap.size": "fit",
    "editor.renderLineHighlight": "all",
    "editor.renderLineHighlightOnlyWhenFocus": false,
    "highlightLine.borderColor": "gray",
    "highlightLine.borderWidth": "0px",
    "window.title": "${separator}${rootPath}",
    "workbench.editor.wrapTabs": true,
    "git.ignoreLegacyWarning": true,
    "cortex-debug.armToolchainPath": "/opt/stm32/arm.com/gcc-arm-none-eabi-10-2020-q4-major/bin",
    "cortex-debug.gdbPath": "/opt/stm32/arm.com/gcc-arm-none-eabi-10-2020-q4-major/bin/arm-none-eabi-gdb",
    "[cpp]": {

    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
    },
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontSize": 12,
    "editor.detectIndentation": false,
    "debug.onTaskErrors": "showErrors",
    "editor.minimap.showSlider": "always",
    "editor.scrollBeyondLastLine": false,
    "github-enterprise.uri": "https://git.hw.bits/",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.highlightModifiedTabs": true,
    "files.watcherExclude":{
        "**/build-debug":true,
        "**/firmware/build-debug":true
    },
    "C_Cpp.updateChannel": "Insiders",
    "workbench.colorCustomizations": {

        "editor.wordHighlightBorder": "#cbfa4b",            // Border for all the occurrences of the word that the cursor is in
        "editor.wordHighlightBackground": "#fc1e1e00",          // Background for "
        "editor.wordHighlightStrongBackground": "#ff000000",    // Background for OTHER occurrences of currently selected word (only variables being written to)
        "editor.wordHighlightStrongBorder": "#00ff73",       // Border for "
        "editor.selectionBackground": "#156868f6",            // Main selection when you drag the cursor over some text
        "editor.selectionHighlightBackground": "#46085300",   // ALL occurrences when you drag the cursor over some text
        "editor.selectionHighlightBorder": "#F0FF12",       // Border of OTHER occurrences from cursor selection only
        // "editor.findMatchBackground": "#058c96",            // Background of currently found word ONLY
        "editor.findMatchBorder": "#00e1ff3f",                // Border of currently found word ONLY
        "editor.findMatchHighlightBackground": "#4725df",   // Background of the OTHER occurrences from find search only
        "terminal.background":"#1D2021",                    // Background of the terminal
        "terminal.foreground":"#A89984",                    // The text in the terminal
        // "terminalCursor.background":"#d8eedb",               // Does nothing
        "terminalCursor.foreground":"#41f031",              // For the terminal
        "editor.lineHighlightBackground": "#330066",         // Highlight of the whole line currently clicked on
        "terminal.selectionBackground": "#00ffdd"           // Background while selecting or searching
    },
